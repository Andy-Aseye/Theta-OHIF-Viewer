{
  "editor.rulers": [80, 120],
  // ===
  // Spacing
  // ===
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // ===
  // Event Triggers
  // ===
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "eslint.run": "onSave",
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    }
  ],
  "prettier.disableLanguages": ["html"],
  "prettier.endOfLine": "lf",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#b58168",
    "activityBar.background": "#b58168",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#a9d5b8",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#b58168",
    "statusBar.background": "#9d674d",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#b58168",
    "statusBarItem.remoteBackground": "#9d674d",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#9d674d",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#9d674d99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "peacock.color": "#9d674d"
}
